/* pages/login/login/agreeRequest/agreeRequest.wxss */
page{
  height: 100%;
}
.Box{
  height: 100%;
  background:#F4F4F4;
}
.UserInfoList{
  height: 145rpx;
  display: flex;
  padding: 25rpx;
  background: white;
  position: relative;
}
.UserInfoList image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-color: darkcyan;
}
.UserInfoList .InfoList{
  flex: 1;
  padding-left: 25rpx;
}
.UserInfoList .InfoReight{
  flex: 0.7;
}
.InfoList-top{
  font-family: '微软雅黑';
  font-size: 1.2rem;
}
.InfoList-center{
  font-family: '微软雅黑';
  color: #3e3e3e;
  font-size: 0.8rem;
}
.InfoList-top image{
  border-radius:0;
  width:40rpx;
  height:40rpx;
  margin-left: 8rpx;
  background:none;
}
.InfoList .InfoList-center{
  margin: 8rpx 0 8rpx 0;
}
.InfoReight{
  display: flex;
  padding-top: 50rpx;
}
.yes{
  flex: 1;
  height: 65rpx;
  border-radius: 12rpx;
  color: white;
  text-align: center;
  line-height: 65rpx;
  margin-right: 15rpx;
  font-family: '微软雅黑';
  font-size: 0.8rem;
  background: #228B22;
}
.no{
  flex: 1;
  height: 65rpx;
  line-height: 65rpx;
  color: white;
  font-family: '微软雅黑';
  text-align: center;
  border-radius: 12rpx;
  font-size: 0.8rem;
  background: #CD2626;
}